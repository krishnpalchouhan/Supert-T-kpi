<?xml version='1.0' encoding='utf-8'?>
<widget id="PEWWVT7623.kpireports.superttransport.com" version="0.2.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Super T KPI</name>
    <description>
       Provides employees of Super T Transport Inc. with various KPI reports.
    </description>
    <author  email="sales@rockstarwebmarketing.com" href="http://cordova.io">
         Rockstar Web Marketing LLC
    </author>
    <content src="index.html" />
	<icon src="www/img/super_t_app_logo.png"/>
	 <platform name="android">
              <icon src="www/img/android/mipmap-ldpi/ic_launcher.png" density="ldpi" />
              <icon src="www/img/android/mipmap-mdpi/ic_launcher.png" density="mdpi" />
              <icon src="www/img/android/mipmap-hdpi/ic_launcher.png" density="hdpi" />
              <icon src="www/img/android/mipmap-xhdpi/ic_launcher.png" density="xhdpi" />
     </platform>
	  <platform name="ios">
              <!-- iOS 8.0+  -->
              <!-- iPhone 6 Plus  -->
              <icon src="www/img/ios/AppIcon.appiconset/icon-60@3x.png" width="180" height="180" />
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="www/img/ios/icon-60.png" width="60" height="60" />
              <icon src="www/img/ios/AppIcon.appiconset/icon-60@2x.png" width="120" height="120" />
              <!-- iPad -->
              <icon src="www/img/ios/AppIcon.appiconset/icon-76.png" width="76" height="76" />
              <icon src="www/img/ios/AppIcon.appiconset/icon-76@2x.png" width="152" height="152" />              
              <!-- iPhone / iPod Touch -->
              <icon src="www/img/ios/icon.png" width="57" height="57" />
              <icon src="www/img/ios/icon@2x.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="www/img/ios/icon-72.png" width="72" height="72" />
              <icon src="www/img/ios/icon-72@2x.png" width="144" height="144" />
              <!-- iPhone Spotlight and Settings Icon -->
              <icon src="www/img/ios/AppIcon.appiconset/icon-small.png" width="29" height="29" />
              <icon src="www/img/ios/AppIcon.appiconset/icon-small@2x.png" width="58" height="58" />
              
     </platform>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
